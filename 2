#include <stdio.h>
#include <conio.h>
void main()
{
char password[10],username[10], ch;
int i;
printf("\nEnter User name: ");
gets(username);
printf("\nEnter the password <any 8 characters>: ");
for(i=0;i<8;i++)
{
 ch = getch();
 password[i] = ch;
 //ch = '*' ;
 //printf("%c",ch);
 printf("*");
}
password[i] = '\0';
printf("\n\nYour password is:");
for(i=0;i<8;i++)
{
 printf("%c",password[i]);
}

}
